<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DoacaoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="#FF0000">

                <ImageView
                    android:layout_marginLeft="100dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icone_banco_de_sangue"
                    ></ImageView>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Efectuar Doação"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/white">
                </TextView>

            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecione o doador :"
                android:textSize="18sp"></TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerdoadores"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"></androidx.recyclerview.widget.RecyclerView>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Codigo : "
                    android:textSize="18sp"></TextView>

                <EditText
                    android:id="@+id/campocoddoacao"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="ex:001D"></EditText>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Mês: "
                    android:textSize="18sp"></TextView>

                <Spinner
                    android:id="@+id/comboboxmes"
                    android:layout_width="200dp"
                    android:layout_height="38dp"></Spinner>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Quantidade: "
                    android:textSize="18sp"></TextView>

                <EditText
                    android:id="@+id/campoquantidade"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="ex:450ml"></EditText>

                <Button
                    android:id="@+id/botaoefetuardoacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doar"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#FF0000">

                </Button>

            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Histórico de Doações :"
                android:textSize="18sp"></TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerdoacoes"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>


    </ScrollView>

</LinearLayout>