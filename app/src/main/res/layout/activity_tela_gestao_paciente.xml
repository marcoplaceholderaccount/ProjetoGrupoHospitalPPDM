<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaGestaoPacienteActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#32cd32">

        <ImageView
            android:layout_marginLeft="100dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_hospital" />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="GestÃ£o Paciente"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white" />

    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnRegistarP"
            android:layout_width="250dp"
            android:layout_height="110dp"
            android:layout_marginBottom="40dp"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/registar_paciente" />



        <ImageButton
            android:id="@+id/btnListarP"
            android:layout_width="250dp"
            android:layout_height="110dp"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/listar_pacientes" />



    </LinearLayout>

</LinearLayout>