<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"> <!-- Can also be "oval", "line", or "ring" -->

    <!-- Set the solid background color -->
    <solid android:color="#000000" /> <!-- Example: Green color -->

    <!-- Set the border/stroke color and width -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

    <!-- Set the corner radius for a rounded shape -->
    <corners android:radius="12dp" /> <!-- Adjust radius for desired roundness -->

    <!-- Optional: Add padding to the button content -->
    <padding
        android:bottom="8dp"
        android:left="10dp"
        android:right="10dp"
        android:top="8dp" />

</shape>

